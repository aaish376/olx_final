<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Back Button and Title -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/left_angle" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ad details"
                android:textSize="18sp"
                android:textStyle="bold"
                android:paddingStart="8dp" />
        </LinearLayout>

        <!-- Category Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Category *"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:layout_marginTop="16dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:background="@drawable/black_border">

            <Spinner
                android:id="@+id/spinner_category"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Choose"
                android:textColor="@color/colorGray01" />


        </LinearLayout>

        <!-- Image Upload Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/black_border"
            android:padding="12dp"
            android:layout_marginTop="16dp">

            <ImageView

                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:src="@drawable/ic_bars"

                android:scaleType="centerInside"
                android:layout_gravity="center" />

            <TextView
                android:id="@+id/add_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add images"
                android:paddingHorizontal="20dp"
                android:paddingVertical="12dp"
                android:textStyle="bold"
                android:background="@drawable/black_border"

                android:layout_gravity="center"
                android:layout_marginTop="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5MB maximum file size accepted in the following formats: jpg, jpeg, png, gif."
                android:textSize="12sp"
                android:textColor="@color/colorGray01"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"/>
        </LinearLayout>

        <!-- Brand Selection -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Brand *"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:layout_marginTop="16dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:background="@drawable/black_border">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Choose"
                android:textColor="@color/colorGray01" />


        </LinearLayout>

        <!-- Condition Selection -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Condition *"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:layout_marginTop="16dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:background="@drawable/black_border">

            <Spinner
                android:id="@+id/spinner_condition"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Choose"
                android:textColor="@color/colorGray01" />


        </LinearLayout>

        <!-- Ad Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ad title *"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:layout_marginTop="16dp"/>

        <EditText
            android:id="@+id/et_ad_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter title"
            android:background="@drawable/black_border"
            android:padding="12dp"/>

        <!-- Description -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description *"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:layout_marginTop="16dp"/>

        <EditText
            android:id="@+id/et_ad_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Describe the item you are selling"
            android:background="@drawable/black_border"
            android:minLines="4"
            android:padding="12dp"/>



        <!-- price  -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price *"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:layout_marginTop="16dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:background="@drawable/black_border">

            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           android:layout_marginEnd="4dp"
            android:text="Rs"
            android:textColor="@color/black" />

            <View
                android:layout_width="1dp"
                android:layout_marginEnd="4dp"
                android:layout_height="match_parent"
                android:background="@color/black"
                />
            <EditText
                android:id="@+id/et_ad_price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Enter Price"
                android:textColor="@color/colorGray01" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="16dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Verified phone number"
                android:textSize="16sp"
                android:textColor="#000000" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_circle_check_solid"
                android:contentDescription="Verified Icon"
                app:tint="@color/teal_700"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/verifiedPhoneNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+923260065376"
                android:textSize="16sp"
                android:textColor="#000000"
                android:textStyle="bold" />
        </LinearLayout>


        <!-- Show Phone Number Switch -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="24dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Show my phone number in ads"
                android:textSize="16sp"
                android:textColor="#000000"
                android:textStyle="bold" />

            <Switch
                android:id="@+id/switch_phone_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:thumbTint="@color/teal_200"
                android:trackTint="@color/colorGray01" />
        </LinearLayout>




        <!-- Next Button -->
        <Button
            android:id="@+id/post_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Post"
            android:textStyle="bold"
            android:backgroundTint="@color/teal_700"
            android:layout_marginTop="16dp"/>
    </LinearLayout>
</ScrollView>
