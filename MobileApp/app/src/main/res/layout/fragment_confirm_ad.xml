<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#FFFFFF">

    <!-- Back Button and Title -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/left_angle"
            android:contentDescription="Back"
            android:layout_marginEnd="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Review your details"
            android:textSize="18sp"
            android:textColor="#000000"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- User Profile and Name -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="24dp">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_profile"
            android:contentDescription="User Avatar"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:layout_marginEnd="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your name"
                android:textSize="14sp"
                android:textColor="#666666" />

            <EditText
                android:id="@+id/editTextName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Asad Ali"
                android:padding="8dp"
                android:background="@drawable/black_border"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold"
                android:inputType="textPersonName" />
        </LinearLayout>
    </LinearLayout>

    <!-- Verified Phone Number -->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="16dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Verified phone number"
            android:textSize="16sp"
            android:textColor="#000000" />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_circle_check_solid"
            android:contentDescription="Verified Icon"
            app:tint="@color/teal_700"
            android:layout_marginEnd="8dp" />

        <TextView
            android:id="@+id/verifiedPhoneNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+923260065376"
            android:textSize="16sp"
            android:textColor="#000000"
            android:textStyle="bold" />
    </LinearLayout>


    <!-- Show Phone Number Switch -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="24dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Show my phone number in ads"
            android:textSize="16sp"
            android:textColor="#000000"
            android:textStyle="bold" />

        <Switch
            android:id="@+id/switch_phone_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:thumbTint="@color/teal_200"
            android:trackTint="@color/colorGray01" />
    </LinearLayout>

    <!-- Post Now Button -->
    <Button
        android:id="@+id/button_post_now"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Post Now"
        android:textSize="16sp"
        android:backgroundTint="@color/teal_700"
        android:textColor="#FFFFFF" />
</LinearLayout>
